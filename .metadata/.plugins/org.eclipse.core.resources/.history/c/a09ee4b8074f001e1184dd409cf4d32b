package com.springboot.login.controller;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.springboot.login.entity.LoginData;
import com.springboot.login.service.LoginService;

@RestController
@RequestMapping("api/loginusers")
public class MainController {

	private LoginService loginService;
	
	/* @GetMapping("/") */
	@RequestMapping(value = "/")
	public String showform() {
		
		return "Form";
	}
	
	// build create User REST API
    @PostMapping
    public ResponseEntity<LoginData> createUser(@RequestBody LoginData loginData){
    	LoginData savedUser = loginService.createData(loginData);
        return new ResponseEntity<>(savedUser, HttpStatus.CREATED);
    }
	
}
